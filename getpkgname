#		last;
#	}
#}
#while(<PKG>){
#	if(/pkgrel=(?<rel>.+$)/){
#		chomp $+{rel};
#		$name.="-".$+{rel};
#		last;
#	}
#}
$name.="-*.pkg.tar.xz";
print "$name\n";
