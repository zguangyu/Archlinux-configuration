#!/usr/bin/perl
open PKG,$ARGV[0];
$name='';
while(<PKG>){
	if(/pkgname=(?<name>[\w\-]+)/){
		chomp $+{name};
		$name.=$+{name};
		last;
	}
}
#while(<PKG>){
